@model Slider
<div class="container">
    <div class="row">
        <form method="post" asp-controller="Slider" asp-action="Create">
            <div class="form-group">
                <label for="formGroupExampleInput">Title</label>
                <input class="form-control" id="formGroupExampleInput" asp-for="Title" placeholder="Enter slider Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Description</label>
                <input class="form-control" id="formGroupExampleInput2" asp-for="Description" placeholder="Enter slider Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput3">Image Url</label>
                <input class="form-control" id="formGroupExampleInput3" asp-for="ImageUrl" placeholder="Enter slider Image Url">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput4">Discount Percentage</label>
                <input class="form-control" id="formGroupExampleInput4" asp-for="DiscountPercentage" placeholder="Enter slider dicount percentage">
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>